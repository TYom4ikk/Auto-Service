<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvRequestTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Техническая диагностика"
            android:textStyle="bold"
            android:textColor="#333"/>

        <ImageView
            android:id="@+id/ivEditRequest"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:tint="#999"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В работе"
            android:textColor="#0A4DA2"
            android:textSize="12sp"
            android:background="#E6F0FF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRequestCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toyota Camry • A123BC777"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvRequestDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Полная диагностика двигателя и ходовой части"
        android:textSize="14sp"
        android:textColor="#333"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата: "
            android:textSize="12sp"
            android:textColor="#666"/>

        <TextView
            android:id="@+id/tvRequestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.10.2025"
            android:textSize="12sp"
            android:textColor="#666"/>
    </LinearLayout>

</LinearLayout>
