<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0A4DA2"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_white"
                android:text="АЧ"
                android:textStyle="bold"
                android:textColor="#0A4DA2"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Алексей Чирков"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Екатеринбург"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="@android:color/white"/>
        </LinearLayout>

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Заказать звонок"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp"
                android:background="@drawable/bg_button_white"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Поддержка"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp"
                android:background="@drawable/bg_button_white"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- МОИ АВТОМОБИЛИ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Мои автомобили"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAddCar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="+ Добавить"
                android:background="#0A4DA2"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- CONTAINER ДЛЯ МАШИН -->
        <LinearLayout
            android:id="@+id/carsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"/>

        <!-- ЗАЯВКИ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Заявки на обслуживание"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnAddRequest"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="+ Создать"
                android:background="#0A4DA2"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- CONTAINER ДЛЯ ЗАЯВОК -->
        <LinearLayout
            android:id="@+id/requestsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"/>

    </LinearLayout>
</ScrollView>
